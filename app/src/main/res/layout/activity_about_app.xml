<?xml version="1.0" encoding="utf-8"?><!--5-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_app_logo"
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:src="@drawable/login_icon" />

    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_app_logo"
        android:text="GoPlanner"
        android:textSize="28dp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/tv_app_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_app_name"
        android:text="Aplikasi GoPlanner adalah sebuah aplikasi yang dirancang untuk membantu pengguna dalam mengatur dan mengelola daftar tugas atau kegiatan sehari-hari. Dengan menggunakan aplikasi ini, pengguna dapat mencatat dan mengorganisir semua tugas yang perlu dilakukan dalam satu tempat yang mudah diakses."
        android:textSize="18dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textAlignment="center"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_app_desc"
        android:id="@+id/tv_created_by"
        android:text="Created by :"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="5dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="100dp"
        android:id="@+id/iv_azzar"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/tv_created_by">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:id="@+id/image_azzar"
            android:src="@drawable/azzar" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="100dp"
        android:id="@+id/iv_putra"
        android:layout_below="@id/tv_created_by"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/iv_azzar">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/putra"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="100dp"
        android:id="@+id/iv_bebin"
        android:layout_below="@id/tv_created_by"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="35dp"
        android:layout_toRightOf="@id/iv_putra">

        <ImageView
            android:id="@+id/image_bebin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bebin" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_azzar"
        android:layout_width="141dp"
        android:layout_height="22dp"
        android:layout_below="@id/iv_azzar"
        android:text="Azzar Rizky"
        android:textAlignment="center"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_putra"
        android:layout_width="280dp"
        android:layout_height="22dp"
        android:layout_below="@id/iv_putra"
        android:layout_marginTop="-1dp"
        android:text="Putra Ganda Dewata"
        android:textAlignment="textEnd"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_bebin"
        android:layout_width="380dp"
        android:layout_height="23dp"
        android:layout_below="@id/iv_bebin"
        android:layout_marginTop="-1dp"
        android:text="Bebin Paula"
        android:textAlignment="textEnd"
        android:textSize="15dp" />



</RelativeLayout>

